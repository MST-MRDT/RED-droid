<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="edu.mst.marsrover.reddroid.FullscreenActivity">

    <VideoView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <edu.mst.marsrover.reddroid.VerticalSeekBar
        android:id="@+id/fullscreen_power_seek"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="60dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/fullscreen_stop_button"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="60dp"
        android:background="#FFFFFF"
        android:text="Stop" />

    <Button
        android:id="@+id/fullscreen_direction_button"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_above="@id/fullscreen_stop_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:text="Reverse"/>

</RelativeLayout>
